---
import IconMinus from "./icons/IconMinus.astro";
import IconPlus from "./icons/IconPlus.astro";

interface Props {
  question: string;
  answer: string;
  last?: boolean;
}

const { question, answer, last } = Astro.props;
---

<details name="faq" class="group">
  <summary
    class="flex list-none list-image-none appearance-none flex-row items-center justify-between text-balance font-semibold ~text-base/lg ~gap-2/6 hover:cursor-pointer hover:text-pink group-focus-within:text-pink"
  >
    {question}
    <IconPlus />
    <IconMinus />
  </summary>

  <p class="pt-6 text-gray-purple ~text-sm/base">
    {answer}
  </p>
</details>

{!last && <hr class="h-[0.0625rem] w-full rounded-full border-light-pink" />}

<style scoped>
  summary::-webkit-details-marker {
    display: none;
  }
</style>
